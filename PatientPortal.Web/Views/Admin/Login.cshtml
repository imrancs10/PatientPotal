@using PatientPortal.DTOModel;
@using PatientPortal.Resource;
@model PatientPortal.DTOModel.UserDTO

@{
    Layout = null;
}

<!DOCTYPE>
<html class="no-js" lang="en">
<head>
    <title>::: Assa Abloy :::</title>
    <base href="@PatientPortal.Shared.PatientPortalConstants.ConfigurationKeys.baseHref" />
    <meta charset="utf-8">
    <link href="~/Contents/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Contents/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Script added -->
    @Scripts.Render("~/bundles/LayoutLogin")
    <script>
        var baseUrl = '@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~"))';
        var languageCode = '@System.Web.HttpContext.Current.Request.Cookies["Language"].Value.ToString()';

        $(document).ready(function () {
            var loginHeader = $('.loginheader').height();
            var loginfooter = $('.login-footer').height();
            var headFootHeight = loginHeader + loginfooter + 125;

            var totalheight = $(document).height() - headFootHeight;

            $('.login-area').height(totalheight);
        });
    </script>
    <link href="~/Contents/css/jquery-confirm.min.css" rel="stylesheet" />
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />

</head>
<body>
    <div class="loading hidden" id="divLoader">
        <img src="~/Contents/images/loader.gif" />
    </div>
    <div class="pagewrap loginbg">

        <header class="loginheader">
            <div class="container">

                <!-- Content Area Start -->
                <!-- Logo -->
                <div class="row clearfix">
                    <div class="col-md-12 col-sm-12 col-xs-12 logo text-center">
                        <a href="javascript:void(0);">
                            <img src="~/Contents/images/logo-yale.png" class="img-responsive" alt="Welcome to the ASSA ABLOY Group - The global leader in door opening solutions" />
                        </a>
                    </div>
                    <div class="col-md-12 col-sm-12 col-xs-12 nextouch text-center">
                        <span>Multi-Family Housing Solutions</span>
                    </div>
                </div>

            </div>
        </header>

        <div class="login-area" id="divLogin">
            <div class="container">
                <div class="login-field-area">
                    <div class="login-form">
                        <form class="form-horizontal">
                            <div class="signin-form" id="divSignin">
                                <div class="page-header">
                                    <h1>@PatientPortal.Resource.Admin.Login.UserLogin</h1>
                                </div>
                                <div class="form-group">
                                    @Html.Label(PatientPortal.Resource.Admin.Login.UserName, htmlAttributes: new { @class = "col-md-4 col-sm-12 col-xs-12 control-label", @for = "username" })
                                    <div class="col-md-8 col-sm-12 col-xs-12">
                                        @Html.TextBoxFor(c => c.UserName, htmlAttributes: new { @class = "form-control", @name = "username", @id = "username", @data_bind = "value:model.UserName", @maxlength = "254", @placeholder = PatientPortal.Resource.Admin.Login.EnterUserName })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label(PatientPortal.Resource.Admin.Login.Password, htmlAttributes: new { @class = "col-md-4 col-sm-12 col-xs-12 control-label", @for = "password" })
                                    <div class="col-md-8 col-sm-12 col-xs-12">
                                        @Html.TextBoxFor(c => c.UserName, htmlAttributes: new { @type = "password", @class = "form-control", @name = "password", @id = "password", @data_bind = "value:model.Password", @maxlength = "15", @placeholder = PatientPortal.Resource.Admin.Login.EnterPassword })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="col-md-4  hidden-xs hidden-sm control-label">&nbsp;</label>
                                    <div class="col-md-8 col-sm-12 col-xs-12">
                                        @Html.ActionLink(PatientPortal.Resource.Admin.Login.ForgetPasswordWithQuestionMark, "", "", htmlAttributes: new { @class = "forgot-password", @href = "javascript:void(0);", @data_bind = "click:ForgetPassword" })

                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-4 col-md-8 col-sm-12 col-xs-12">
                                        <button type="submit" class="btn btn-default" data-bind="click:Login">@PatientPortal.Resource.Admin.Login.SignIn</button>
                                    </div>
                                </div>
                            </div>

                            <div class="forgot-password-form" id="divForgetPassword" style="display:none;">
                                <div class="page-header">
                                    <h1>@PatientPortal.Resource.Admin.Login.ForgetPassword</h1>
                                </div>
                                <div class="form-group">
                                    @Html.Label(PatientPortal.Resource.Admin.Login.EnterEmailId, htmlAttributes: new { @class = "col-md-4 col-sm-12 col-xs-12 control-label", @for = "username" })
                                    <div class="col-md-8 col-sm-12 col-xs-12">
                                        @Html.TextBoxFor(c => c.UserName, htmlAttributes: new { @type = "text", @class = "form-control", @id = "username", @data_bind = "value:model.ForgetPasswordUserName", @placeholder = PatientPortal.Resource.Admin.Login.UserName, @maxlength = "254" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-4 col-md-8 col-sm-12 col-xs-12">
                                        <button type="submit" class="btn btn-default" data-bind="click:SendForgetPassword">@PatientPortal.Resource.Admin.Login.Send</button>
                                        @Html.ActionLink(PatientPortal.Resource.Admin.Login.BackWithQuestionMark, "", "", htmlAttributes: new { @class = "paddingL10 link", @href = "javascript:void(0);", @data_bind = "click:BackToLogin" })
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Foorer Start -->
    <div class="login-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-12 col-xs-12 text-left">An ASSA ABLOY Group Brand</div>
                <div class="col-md-7 col-sm-12 col-xs-12 text-center">Copyright &copy; 2015, Yale Security Inc., an ASSA ABLOY Group company </div>
                <div class="col-md-2 col-sm-12 col-xs-12 text-right footer-logo"> <img src="~/Contents/images/footer-logo.png" class="img-responsive" /></div>
            </div>
        </div>
    </div>
    <script type="text/javascript" data-main="Scripts/app/@ViewBag.Script/config.js" src="~/Scripts/lib/require.js"></script>
</body>
</html>