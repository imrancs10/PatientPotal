
@{
    ViewBag.Title = "Patient Billing Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/App/Report/BillingReport.js"></script>
<form action="/admin/SetBillingReport" method="post" style="margin-top:50px;" enctype = "multipart/form-data">
    <div class="col-sm-4 col-lg-4 col-lg-offset-4">
        <div class="panel panel-primary">
            <div class="panel-heading">Billing Report</div>
            <div class="panel-body">
                @Html.Partial("_PatientSearch")
                <div class="form-group">
                    <label for="">Bill No.</label>
                    <input type="text" name="Billno" id="txtBillNo" maxlength="50" class="form-control" placeholder="Bill No" />
                </div>
                <div class="form-group">
                    <label for="">Bill Date</label>
                    <input type="date" name="BillDate" id="txtBillDate" class="form-control" placeholder="Bill Date" />
                </div>
                <div class="form-group">
                    <label for="">Bill Type</label>
                    <input type="text" name="BillType" id="txtBillType" class="form-control" placeholder="Bill Type" />
                </div>
                <div class="form-group">
                    <label for="">Bill Amount</label>
                    <input type="text" name="BillAmount" id="txtBillAmount" class="form-control" placeholder="Bill Amount" />
                </div>
                <div class="form-group">
                    <label for="">Report Path</label>
                    <div class="radio-inline">
                        <label class="radio-inline"><input type="radio" name="ReportPath" id="_file" value="file" checked>File Upload</label>
                        <label class="radio-inline"><input type="radio" name="ReportPath" id="_url" value="url">Enter Url</label>
                    </div>
                </div> 
                <div class="form-group file">
                    <label for="">File Upload</label>
                    <input type="file" name="reportfile" id="_fileUpload" class="form-control" />
                </div>
                <div class="form-group url" style="display:none;">
                    <label for="">Report URL</label>
                    <input type="text" name="reporturl" id="reporturl" class="form-control" />
                </div>
            </div>
            <div class="panel-footer">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

