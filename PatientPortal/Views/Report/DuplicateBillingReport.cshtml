            '<td style="width:300px;margin-left:30px;color:#000;font-weight:700;padding:10px;border:2px solid #ddd;height:30px;">' + $(tr).find('td:eq(1)').text() + '</td>' +
            '</tr>' +
            '<tr>' +
            '<td style="width:300px;margin-right:30px;color:#b83638;font-weight:700;padding:10px;border:2px solid #ddd;height:30px;">Bill Type</td>' +
            '<td style="width:300px;margin-left:30px;color:#000;font-weight:700;padding:10px;border:2px solid #ddd;height:30px;">' + getBillType($(tr).find('td:eq(2)').text()) + '</td>' +
            '</tr>' +

            '<tr>' +
            '<td style="width:300px;margin-right:30px;color:#b83638;font-weight:700;padding:10px;border:2px solid #ddd;height:30px;">Bill Amount :</td>' +
               '<td style="width:300px;margin-left:30px;color:#000;font-weight:700;padding:10px;border:2px solid #ddd;height:30px;">' + $(tr).find('td:eq(3)').text() + '</td>' +
