@using DataLayer
@using System.Configuration;
@using PatientPortal.Global;

@model List<LabreportPdf>
@{
    ViewBag.Title = "Report Viewing";
    Layout = "~/Views/Shared/_LayoutPatient.cshtml";
}
<form action="/Report/DownloadReportFile" method="post" id="_form">
    <div class="" style="padding-top:20px;">
        <div class="col-sm-12 col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">Report Viewing</div>
                <div class="panel-body">
                    <input type="hidden" name="fileurl" id="_fileurl" value="" />
                    <table class="table table-bordered table-hover table-responsive table-striped">
                        <thead>
                            <tr>
                                <th>Reference No</th>
                                <th>Lab Name</th>
                                <th>Bill No.</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Labref</td>
                                        <td>@item.LabName</td>
                                        <td>@item.BillNo</td>
                                        <td>@Convert.ToDateTime(item.ReportDate).ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <div class="btn-group">
                                                @*@if (!string.IsNullOrEmpty(item.Url) && (!item.Url.Contains("http") && !item.Url.Contains("https")))
                                                    {
                                                        <div class="btn-group">
                                                            <a href="~/Report/ViewReportFile?fileUrl=@item.Url&view=GetBillingReport" id="_view" data-url="@item.Url" target="_blank" class="btn btn-primary">View</a>
                                                            <button type="button" id="_download" data-url="@item.Url" class="btn btn-primary">Download</button>
                                                            @if (item.LabName.ToLower().Contains("radiology"))
                                                            {
                                                                <a href="@ConfigurationManager.AppSettings["HISRadiologyReportUrl"]?labrefno=@Convert.ToString(item.Labref))" target="_blank" class="btn btn-primary">View Lab Image</a>
                                                            }
                                                        </div>
                                                    }
                                                    else if (!string.IsNullOrEmpty(item.Url) && (item.Url.Contains("http") || item.Url.Contains("https")))
                                                    {
                                                        <div class="btn-group">
                                                            <a href="@item.Url" id="_view" data-url="@item.Url" target="_blank" class="btn btn-primary">View</a>
                                                            <a href="@item.Url" id="_download" data-url="@item.Url" target="_blank" class="btn btn-primary" download>Download</a>
                                                            @if (item.LabName.ToLower().Contains("radiology"))
                                                            {
                                                                <a href="@ConfigurationManager.AppSettings["HISRadiologyReportUrl"]?labrefno=@Convert.ToString(item.Labref))" target="_blank" class="btn btn-primary">View Lab Image</a>
                                                            }
                                                        </div>
                                                    }*@
                                                @if (!string.IsNullOrEmpty(Convert.ToString(item.Labref)))
                                                {
                                                    var url = @ConfigurationManager.AppSettings["HISLabReportUrl"] + "/" + Convert.ToString(item.Labref) + ".pdf";
                                                    var urlReplaced = url;// CryptoEngine.Encrypt(url);
                                                    <div class="btn-group">
                                                        <a href="#" id="_view" data-url="@url" class="btn btn-primary">View</a>
                                                        <a href="~/Report/DownloadFile?url=@urlReplaced&ext=pdf" id="_download" target="_blank" class="btn btn-primary">Download</a>
                                                        @if (item.LabName.ToLower().Contains("radiology"))
                                                        {
                                                            <a href="@ConfigurationManager.AppSettings["HISRadiologyReportUrl"]?labrefno=@Convert.ToString(item.Labref))" target="_blank" class="btn btn-primary">View Lab Image</a>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <text>No Reports</text>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" tabindex="-1" role="dialog" id="viewReportModal" style="width:900px;height:1050px;">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><b>Lab Report</b></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <iframe src="http://uppbpb.gov.in/notice/vigyapti08.08.2018.pdf"
                            style="border: 0; width:800px; height:1000px;"></iframe>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


</form>
<script>
    $(document).on('click', '[id*="view"]', function () {
        alert();
        $.ajax({
                type: 'POST',
                url: '@Url.Action("getpath")',
                dataType: 'json',
                data: { path: $(this).data('url') },
                success: function (path) {
                    window.open('@Url.Action("getpdf")?path=' + $(this).data('url'), "_blank", "scrollbars=yes,resizable=yes,top=500,left=500,width=500,height=700");
                },
                error: function (ex) {
                alert(Error);
                }
            });
    });
</script>




