@using DataLayer
@using System.Configuration;

@model List<LabreportPdf>
@{
    ViewBag.Title = "Report Viewing";
    Layout = "~/Views/Shared/_LayoutPatient.cshtml";
}
<form action="/Report/DownloadReportFile" method="post" id="_form">
    <div class="" style="padding-top:20px;">
        <div class="col-sm-12 col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">Report Viewing</div>
                <div class="panel-body">
                    <input type="hidden" name="fileurl" id="_fileurl" value="" />
                    <table class="table table-bordered table-hover table-responsive table-striped">
                        <thead>
                            <tr>
                                <th>Reference No</th>
                                <th>Lab Name</th>
                                <th>Bill No.</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Labref</td>
                                        <td>@item.LabName</td>
                                        <td>@item.BillNo</td>
                                        <td>@Convert.ToDateTime(item.ReportDate).ToShortDateString()</td>
                                        <td>
                                            <div class="btn-group">
                                                @if (!string.IsNullOrEmpty(item.Url) && (!item.Url.Contains("http") && !item.Url.Contains("https")))
                                                {
                                                    <div class="btn-group">
                                                        <a href="~/Report/ViewReportFile?fileUrl=@item.Url&view=GetBillingReport" id="_view" data-url="@item.Url" target="_blank" class="btn btn-primary">View</a>
                                                        <button type="button" id="_download" data-url="@item.Url" class="btn btn-primary">Download</button>
                                                        @if (item.LabName.ToLower().Contains("radiology"))
                                                        {
                                                            <a href="@ConfigurationManager.AppSettings["HISRadiologyReportUrl"]?Labref=@Convert.ToString(item.Labref))" target="_blank" class="btn btn-primary">View Lab Image</a>
                                                        }
                                                    </div>
                                                }
                                                else if (!string.IsNullOrEmpty(item.Url) && (item.Url.Contains("http") || item.Url.Contains("https")))
                                                {
                                                    <div class="btn-group">
                                                        <a href="@item.Url" id="_view" data-url="@item.Url" target="_blank" class="btn btn-primary">View</a>
                                                        <a href="@item.Url" id="_download" data-url="@item.Url" target="_blank" class="btn btn-primary" download>Download</a>
                                                        @if (item.LabName.ToLower().Contains("radiology"))
                                                        {
                                                            <a href="@ConfigurationManager.AppSettings["HISRadiologyReportUrl"]?Labref=@Convert.ToString(item.Labref))" target="_blank" class="btn btn-primary">View Lab Image</a>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <text>No Reports</text>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</form>
<script>
    //$(document).on('click', '[id*="_download"]', function () {
    //    $('#_fileurl').val($(this).data('url'));
    //    $('#_form').submit();
    //});

    $(document).on('click', '[id*="view"]', function () {
        $('#_form').attr('action', '/Report/ViewReportFile');
        $('#_fileurl').val($(this).data('url'));
        // $('#_form').submit();
    });
</script>



