
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_LayoutPatient.cshtml";
}

<div class="row" style="margin-top:50px;">
    <div class="col-sm-12 col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Forget Password
            </div>
            <div class="panel-body">
                <div class="row">
                    <form id="form" class="form-horizontal" action="ForgetPassword" method="post" autocomplete="off">
                        <div class="col-sm-12 col-lg-12">
                            @if (!string.IsNullOrEmpty(Convert.ToString(ViewData["msg"])))
                            {
                                <div class="col-sm-4 col-lg-4">
                                    <div class="form-group">
                                        <label>@Convert.ToString(ViewData["msg"])</label>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="col-sm-4 col-lg-4">
                                    <div class="form-group">
                                        <label>Enter Registration Number</label>
                                        <div>
                                            <input type="text" value="" name="registernumber" required data-valid="required" class="form-control"
                                                   id="registernumber" placeholder="Register Number" autocomplete="off" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label></label>
                                        <div>
                                            <div>
                                                <input type="submit" name="Submit" class="btn btn-warning pull-right" value="Submit">
                                                <a href="/Home/Index" class="btn btn-warning pull-right" style="margin:0 20px;">Cancel</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

