                                <div class="col-md-7 col-sm-12 col-xs-12">
                                    <select class="common-input selectval" id="country" name="country" data-valid="required"></select>
                                </div>
                            </div>
                            <div class="form-group" id="state_val">
                                <label for="State" class="control-label col-md-4 col-sm-12 col-xs-12">State</label>
                                <div class="col-md-7 col-sm-12 col-xs-12">
                                    <select class="common-input selectval" id="state" name="state" data-live-search="true" data-valid="required"></select>
                                </div>
                            </div>
                            <div class="form-group" id="show_city">
                                <label for="City" class="control-label col-md-4 col-sm-12 col-xs-12">City</label>
                                <div class="col-md-7 col-sm-12 col-xs-12">
                                    <select class="common-input selectval" name="city" id="city"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Pin Code" class="control-label col-md-4 col-sm-12 col-xs-12"><span>Pin Code</span></label>
                                <div class="col-md-7 col-sm-12 col-xs-12">
                                    <input type="text" class="register-input" id="pincode" placeholder="Enter Pin Code " value="" name="pincode" data-valid="required" maxlength="6" onkeypress="return isNumber(event)" autocomplete="off">
                                </div>
                            </div>
                            <div class="form-group" id="resi_status">
                                <label for="LastName" class="control-label col-md-4 col-sm-12 col-xs-12"><span>Department</span> </label>
                                <div class="col-md-7 col-sm-12 col-xs-12">
                                    <select class="common-input selectval" name="department" id="department"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Religion" class="control-label col-md-4 col-sm-12 col-xs-12">Religion</label>
                                <div class="col-md-7 col-sm-12 col-xs-12">
                                    <select class="common-input selectval" id="religion" name="religion" data-live-search="true" data-valid="required">
                                        <option value="">Select</option>
                                        <option value="739" title="Hindu">Hindu</option>
                                        <option value="744" title="Jain">Jain</option>
                                        <option value="740" title="Muslim">Muslim</option>
                                        <option value="742" title="Sikh">Sikh</option>
                                        <option value="741" title="Christian">Christian</option>
                                        <option value="748" title="Spiritual">Spiritual</option>
                                        <option value="743" title="Parsi">Parsi</option>
                                        <option value="746" title="Jewish">Jewish</option>
                                        <option value="745" title="Buddhist">Buddhist</option>
                                        <option value="1090" title="No Religion">No Religion</option>
                                        <option value="749" title="Other">Other</option>
                                    </select>
                                </div>
                            </div>
                            <hr />
                            <div class="form-group">
                                <input type="submit" name="getotp" class="btn btn-primary btn-blue btn-block btn-lg" value="Get OTP" style="float:right;width:200px;">
                            </div>
                        </form>
                    }
                    else
                    {
                        <form id="register_form" class="form-horizontal" action="verifyOTP" method="post" autocomplete="off">
                            <h2>Verify OTP</h2>
                            <p style="margin-bottom:0px;">Verify Your OTP and this brings you to Payment Page</p>
                            <hr />
                            <div class="form-group">
                                <label for="user_OTP" class="control-label col-md-4 col-sm-12 col-xs-12"><span>OTP</span></label>
                                <div class="col-md-7 col-sm-12 col-xs-12">
                                    <input type="text" class="register-input" id="user_OTP" placeholder="OTP" value="" name="OTP" data-valid="required">
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" name="verifyOTP" class="btn btn-primary btn-blue btn-block btn-lg" value="Continue" style="float:right;width:200px;">
                            </div>
                        </form>
                    }
                </div>

            </div>

        </div>
    </div>


